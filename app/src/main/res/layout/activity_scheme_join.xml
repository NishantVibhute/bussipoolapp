<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bussinesspoolapp.bussipool.SchemeJoin">


    <TextView
        android:id="@+id/schemeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/enriqueta"
        android:padding="10dp"
        android:text="Scheme 1"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/SchemeDescription"
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:background="@color/BussiPool"
        android:fontFamily="@font/enriqueta"
        android:padding="5dp"
        android:text="SchemeDescription"
        android:textColor="@android:color/background_light"
        android:scrollbars = "vertical"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="27dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/BussiPool"
            android:fontFamily="@font/enriqueta"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="Amount"
            android:textColor="@android:color/background_light" />

        <TextView
            android:id="@+id/schemeAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/BussiPool"
            android:fontFamily="@font/enriqueta"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:textColor="@android:color/background_light" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ed356b"
        android:fontFamily="@font/enriqueta"
        android:padding="5dp"
        android:paddingLeft="5dp"
        android:text="Select Payment Mode"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <RadioGroup
        android:id="@+id/radgrpPay"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp">

        <RadioButton
            android:id="@+id/radCheq"
            android:layout_width="190dp"
            android:layout_height="21dp"
            android:layout_weight="1"
            android:fontFamily="@font/enriqueta"
            android:text="by Cheque" />

        <RadioButton
            android:id="@+id/radNetBanking"
            android:layout_width="191dp"
            android:layout_height="22dp"
            android:layout_weight="1"
            android:fontFamily="@font/enriqueta"
            android:text="by Netbanking" />

        <RadioButton
            android:id="@+id/radCash"
            android:layout_width="190dp"
            android:layout_height="19dp"
            android:layout_weight="1"
            android:fontFamily="@font/enriqueta"
            android:text="by Cash" />
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:fontFamily="@font/enriqueta"
        android:padding="5dp"
        android:text="Note :"
        android:textColor="@android:color/holo_red_light" />

    <TextView
        android:id="@+id/txtPayDetails"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:fontFamily="@font/enriqueta"
        android:padding="5dp" />

    <Button
        android:id="@+id/btnJoin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/BussiPoolSecondary"
        android:fontFamily="@font/enriqueta"
        android:text="JOIN"
        android:textColor="@android:color/background_light" />


</LinearLayout>
